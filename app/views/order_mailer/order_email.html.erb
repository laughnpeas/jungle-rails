<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Order Email</title>
</head>
<body>
  <h1>Your order has succeessfully placed</h1>
  <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @order_total = 0 %>
          <% @order.line_items.each do |details| %>
            <%= render 'item', details: details %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              TOTAL:
            </th>
            <th>
              <%= @order_total %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div> 
</body>
</html>
