<% quantity = details.quantity %>
<% if product = details.product %>
<% item_total = product.price * quantity %>
<% @order_total += item_total %>
  <tr>
    <td>
      <h4><%= details.product.name %></h4>
      <br>
      <p><%= details.product.description %></p>
    </td>
    <td>
      <%= details.product.price %>
    </td>
    <td>
      <%= quantity %>
    </td>
    <td>
      <%= item_total %>
    </td>
  </tr>
<% end %>
