<% @product.reviews.order(created_at: :desc).each do |review| %>
  <div class='row'>
    <div class='col-sm-10'>
      by <%= review.user.first_name %>
      
      <% if review.rating %>
        <%= raw((fa_icon 'thumbs-up') * review.rating.to_i) %> 
      <% end %> 
      <%= review.description %>
    </div>
    <div class='col-sm-2'>
      <% if current_user == review.user %>
        <%= link_to fa_icon('trash')+' Delete', review_path(review), method: 'delete', class: 'btn btn-sm btn-default', data: {confirm: 'Do you want to delete this review?'} %>
      <% end %>
    </div>
  </div>
<% end %>